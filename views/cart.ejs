<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
    <!-- Cart Products Section -->
    <div class="w-[60%] space-y-4">
         <% cart.forEach((c)=>{ %>
        <div class="w-full rounded-md overflow-hidden shadow-lg bg-[<%=c.panelColor%>] text-[<%=c.textColor %>]">
            <div class="flex">
                <div class="w-40 h-40 bg-[<%=c.bgcolor %>] flex justify-center items-center">
                    <img class="h-[6rem] " src="data:image/jpeg;base64,<%=c.image.toString('base64') %>"
                    alt="">    
                </div>
                <div class="flex-1 p-5">
                    <h3 class="text-2xl"><%= c.name %></h3>
                    <div class="flex items-center gap-4 mt-3">
                        <button class="w-8 h-8 bg-gray-200 flex rounded-full items-center justify-center text-black">-</button>
                        <span class="px-3 py-1 rounded-md bg-gray-100 text-black">1</span>
                        <button class="w-8 h-8 bg-gray-200 flex rounded-full items-center justify-center text-black">+</button>
                    </div>
                    <div class="flex items-center justify-between mt-3">
                        <h4 class="text-lg font-medium">Net Total</h4>
                        <h2 class="text-lg font-semibold">₹ <%= c.price %></h2>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Price Breakdown Section -->
    <div class="w-[40%] bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold">Price Breakdown</h3>
        <div class="px-2 mt-5 space-y-3">
            <div class="flex justify-between">
                <h4>Total MRP</h4>
                <h4>₹ <%= totalMrp %></h4>
            </div>
            <div class="flex justify-between">
                <h4>Discount on MRP</h4>
                <h4>₹ <%= totalDiscount %></h4>
            </div>
            <div class="flex justify-between">
                <h4>Platform Fee</h4>
                <h4>₹ <%= platformFee %></h4>
            </div>
            <div class="flex justify-between">
                <h4>Shipping Fee</h4>
                <h4 class="text-green-600">FREE</h4>
            </div>
        </div>
        <div class="w-full h-[1px] bg-gray-300 my-5"></div>
        <div class="flex justify-between">
            <h3 class="text-xl font-semibold">Total Amount</h3>
            <h3 class="text-xl font-bold text-green-600">₹ <%= totalAmount %></h3>
        </div>
        <button class="w-full bg-green-600 text-white py-3 mt-5 rounded-lg hover:bg-green-700 transition">
            Proceed to Checkout
        </button>
    </div>
</div>

<%- include('./partials/footer') %>
